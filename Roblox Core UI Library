--[[
    ROBLOX "IN-GAME MENU" REPLICA LIBRARY
    Matches the Top-Tab style shown in your screenshot.
]]

local TweenService = game:GetService("TweenService")
local UserInputService = game:GetService("UserInputService")
local CoreGui = game:GetService("CoreGui")
local Players = game:GetService("Players")

local Player = Players.LocalPlayer

local Library = {}

-- // THEME COLORS //
local Theme = {
    Background = Color3.fromRGB(25, 27, 29),      -- Main dark background
    TopBar = Color3.fromRGB(30, 30, 30),          -- Slightly lighter top (optional)
    TextActive = Color3.fromRGB(255, 255, 255),   -- White for active tab
    TextInactive = Color3.fromRGB(150, 150, 150), -- Grey for inactive
    Underline = Color3.fromRGB(255, 255, 255),    -- White line under active tab
    Hover = Color3.fromRGB(50, 50, 50)
}

-- // UTILS //
local function Round(instance, radius)
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, radius)
    corner.Parent = instance
end

function Library:Window()
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "RobloxMenu_Replica"
    ScreenGui.ResetOnSpawn = false
    ScreenGui.IgnoreGuiInset = true
    
    pcall(function() ScreenGui.Parent = CoreGui end)
    if not ScreenGui.Parent then ScreenGui.Parent = Player:WaitForChild("PlayerGui") end

    -- 1. Main Container (The Big Dark Box)
    local MainFrame = Instance.new("Frame")
    MainFrame.Name = "MainFrame"
    MainFrame.Size = UDim2.new(0, 750, 0, 450)
    MainFrame.Position = UDim2.new(0.5, -375, 0.5, -225)
    MainFrame.BackgroundColor3 = Theme.Background
    MainFrame.BackgroundTransparency = 0.1 -- Slight see-through like real menu
    MainFrame.BorderSizePixel = 0
    MainFrame.Parent = ScreenGui
    Round(MainFrame, 12)

    -- 2. The Top Navigation Bar (What you circled)
    local TopBar = Instance.new("Frame")
    TopBar.Name = "TopNavigation"
    TopBar.Size = UDim2.new(1, 0, 0, 55) -- Height of the tab area
    TopBar.BackgroundTransparency = 1
    TopBar.Parent = MainFrame

    -- Layout for Tabs (Horizontal, Centered or Spread)
    local TabLayout = Instance.new("UIListLayout")
    TabLayout.Parent = TopBar
    TabLayout.FillDirection = Enum.FillDirection.Horizontal
    TabLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
    TabLayout.SortOrder = Enum.SortOrder.LayoutOrder
    TabLayout.Padding = UDim.new(0, 20) -- Space between "People", "Settings", etc.

    -- Padding to center the group slightly if needed
    local TopPadding = Instance.new("UIPadding")
    TopPadding.PaddingTop = UDim.new(0, 10)
    TopPadding.Parent = TopBar

    -- 3. Content Container (Area below the tabs)
    local ContentArea = Instance.new("Frame")
    ContentArea.Name = "ContentArea"
    ContentArea.Size = UDim2.new(1, 0, 1, -60)
    ContentArea.Position = UDim2.new(0, 0, 0, 60)
    ContentArea.BackgroundTransparency = 1
    ContentArea.Parent = MainFrame

    -- Window Dragging Logic
    local dragging, dragInput, dragStart, startPos
    TopBar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true; dragStart = input.Position; startPos = MainFrame.Position
        end
    end)
    TopBar.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then dragInput = input end
    end)
    UserInputService.InputChanged:Connect(function(input)
        if dragging and input == dragInput then
            local delta = input.Position - dragStart
            MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)
    UserInputService.InputEnded:Connect(function(i) if i.UserInputType == Enum.UserInputType.MouseButton1 then dragging=false end end)

    -- // TAB SYSTEM //
    local Tabs = {}
    local FirstTab = true
    
    local WindowFuncs = {}

    function WindowFuncs:Tab(Name, IconId)
        -- 1. Create the Tab Button (in the top bar)
        local TabBtn = Instance.new("TextButton")
        TabBtn.Name = Name .. "_Tab"
        TabBtn.Size = UDim2.new(0, 0, 1, 0) -- Width automatic
        TabBtn.AutomaticSize = Enum.AutomaticSize.X
        TabBtn.BackgroundTransparency = 1
        TabBtn.Text = "" -- We use a label for better control
        TabBtn.Parent = TopBar

        local TabLabel = Instance.new("TextLabel")
        TabLabel.Text = Name
        TabLabel.Size = UDim2.new(1, 0, 1, -4) -- Leave room for underline
        TabLabel.BackgroundTransparency = 1
        TabLabel.Font = Enum.Font.GothamBold
        TabLabel.TextSize = 18
        TabLabel.TextColor3 = Theme.TextInactive
        TabLabel.Parent = TabBtn
        
        -- Add Icon if provided (like the People icon)
        if IconId then
            local Icon = Instance.new("ImageLabel")
            Icon.Size = UDim2.new(0, 20, 0, 20)
            Icon.Position = UDim2.new(0, -25, 0.5, -10) -- To the left of text
            Icon.BackgroundTransparency = 1
            Icon.Image = IconId
            Icon.ImageColor3 = Theme.TextInactive
            Icon.Parent = TabLabel
            -- Shift text to make room
            TabBtn.Size = UDim2.new(0, 0, 1, 0) 
            local Pad = Instance.new("UIPadding")
            Pad.PaddingLeft = UDim.new(0, 25)
            Pad.PaddingRight = UDim.new(0, 5)
            Pad.Parent = TabBtn
        else
             local Pad = Instance.new("UIPadding")
            Pad.PaddingLeft = UDim.new(0, 10)
            Pad.PaddingRight = UDim.new(0, 10)
            Pad.Parent = TabBtn
        end

        -- The White Underline (Hidden by default)
        local Underline = Instance.new("Frame")
        Underline.Name = "Underline"
        Underline.Size = UDim2.new(1, 0, 0, 2)
        Underline.Position = UDim2.new(0, 0, 1, -2)
        Underline.BackgroundColor3 = Theme.Underline
        Underline.BorderSizePixel = 0
        Underline.Visible = false
        Underline.Parent = TabBtn

        -- 2. Create the Page (The content below)
        local Page = Instance.new("ScrollingFrame")
        Page.Size = UDim2.new(1, -40, 1, 0)
        Page.Position = UDim2.new(0, 20, 0, 0)
        Page.BackgroundTransparency = 1
        Page.ScrollBarThickness = 4
        Page.ScrollBarImageColor3 = Color3.fromRGB(200,200,200)
        Page.Visible = false
        Page.Parent = ContentArea
        
        local PageList = Instance.new("UIListLayout")
        PageList.SortOrder = Enum.SortOrder.LayoutOrder
        PageList.Padding = UDim.new(0, 8)
        PageList.Parent = Page
        
        PageList:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
            Page.CanvasSize = UDim2.new(0, 0, 0, PageList.AbsoluteContentSize.Y + 20)
        end)

        -- Activation Logic
        local function Activate()
            -- Deactivate others
            for _, t in pairs(Tabs) do
                t.Page.Visible = false
                t.Underline.Visible = false
                t.Label.TextColor3 = Theme.TextInactive
                if t.Icon then t.Icon.ImageColor3 = Theme.TextInactive end
            end
            
            -- Activate this one
            Page.Visible = true
            Underline.Visible = true
            TabLabel.TextColor3 = Theme.TextActive
            if IconId then TabLabel:FindFirstChild("ImageLabel").ImageColor3 = Theme.TextActive end
        end

        TabBtn.MouseButton1Click:Connect(Activate)

        if FirstTab then
            Activate()
            FirstTab = false
        end

        table.insert(Tabs, {
            Btn = TabBtn, 
            Page = Page, 
            Underline = Underline, 
            Label = TabLabel,
            Icon = TabLabel:FindFirstChild("ImageLabel")
        })
        
        -- // SECTION HELPERS //
        local SectionFuncs = {}
        
        function SectionFuncs:Button(Text, Callback)
            local Btn = Instance.new("TextButton")
            Btn.Size = UDim2.new(1, 0, 0, 50)
            Btn.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
            Btn.BackgroundTransparency = 0.92
            Btn.Text = Text
            Btn.TextColor3 = Color3.fromRGB(255, 255, 255)
            Btn.Font = Enum.Font.Gotham
            Btn.TextSize = 16
            Btn.Parent = Page
            Round(Btn, 8)
            
            Btn.MouseButton1Click:Connect(function()
                pcall(Callback)
                -- Click animation
                Btn.BackgroundTransparency = 0.85
                task.wait(0.1)
                Btn.BackgroundTransparency = 0.92
            end)
        end
        
        function SectionFuncs:Toggle(Text, Default, Callback)
            local Toggled = Default or false
            local Container = Instance.new("TextButton")
            Container.Size = UDim2.new(1, 0, 0, 50)
            Container.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
            Container.BackgroundTransparency = 0.92
            Container.Text = ""
            Container.AutoButtonColor = false
            Container.Parent = Page
            Round(Container, 8)
            
            local Label = Instance.new("TextLabel")
            Label.Text = Text
            Label.Size = UDim2.new(1, -60, 1, 0)
            Label.Position = UDim2.new(0, 15, 0, 0)
            Label.BackgroundTransparency = 1
            Label.TextColor3 = Color3.new(1,1,1)
            Label.Font = Enum.Font.Gotham
            Label.TextSize = 16
            Label.TextXAlignment = Enum.TextXAlignment.Left
            Label.Parent = Container
            
            local Checkbox = Instance.new("Frame")
            Checkbox.Size = UDim2.new(0, 24, 0, 24)
            Checkbox.Position = UDim2.new(1, -40, 0.5, -12)
            Checkbox.BackgroundColor3 = Toggled and Color3.fromRGB(255, 255, 255) or Color3.fromRGB(60, 60, 60)
            Checkbox.Parent = Container
            Round(Checkbox, 6)
            
            local CheckIcon = Instance.new("ImageLabel")
            CheckIcon.Size = UDim2.new(0, 16, 0, 16)
            CheckIcon.Position = UDim2.new(0.5, -8, 0.5, -8)
            CheckIcon.BackgroundTransparency = 1
            CheckIcon.Image = "rbxassetid://6031094667"
            CheckIcon.Visible = Toggled
            CheckIcon.Parent = Checkbox

            Container.MouseButton1Click:Connect(function()
                Toggled = not Toggled
                Checkbox.BackgroundColor3 = Toggled and Color3.fromRGB(255, 255, 255) or Color3.fromRGB(60, 60, 60)
                CheckIcon.Visible = Toggled
                if Callback then Callback(Toggled) end
            end)
        end

        return SectionFuncs
    end

    return WindowFuncs
end

-- // EXAMPLE USAGE //
local Window = Library:Window()

-- 1. "People" Tab (Like screenshot)
local PeopleTab = Window:Tab("People", "rbxassetid://3926305904") -- Generic people icon
PeopleTab:Button("Invites Connections", function() print("Invites clicked") end)
PeopleTab:Toggle("Mute All", false, function(v) print("Mute All:", v) end)

-- 2. "Settings" Tab
local SettingsTab = Window:Tab("Settings", "rbxassetid://3926307971") -- Generic gear icon
SettingsTab:Toggle("Fullscreen", false, function(v) end)
SettingsTab:Button("Reset Character", function() 
    game.Players.LocalPlayer.Character:BreakJoints() 
end)

-- 3. "Captures" Tab
local CapturesTab = Window:Tab("Captures", "rbxassetid://3926305904") 
CapturesTab:Button("Take Screenshot", function() end)
